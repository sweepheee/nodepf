extends layouts/main

block content
    .form__container
        form(action=`/board${routes.write}`, method="post", enctype="multipart/form-data")
            input(type="text", name="title", placeholder="Title", required)
            textarea(name="content", rows="30", cols="50", resize="none", required)
            input(type="file", name="imageFile", placeholder="upload", accept=".png, .jpg, .jpeg, .gif", required)
            input(type="submit", value="write")